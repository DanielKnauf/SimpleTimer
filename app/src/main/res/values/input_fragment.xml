<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_fragment_instruction_text_view" parent="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/timer_instruction</item>
    </style>

    <style name="input_fragment_time_selector_container" parent="linear_layout_horizontal" />

    <style name="input_fragment_repeat_container" parent="linear_layout_horizontal">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="input_fragment_time_selector">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="input_fragment_time_selector_middle" parent="input_fragment_time_selector">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="input_fragment_repeat_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="input_fragment_repeat_switch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="input_fragment_start_button" parent="start_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>