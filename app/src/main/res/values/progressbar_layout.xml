<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="progressbar_thickness">20dp</dimen>

    <style name="progress_bar_circle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/progressbar_background</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_circle</item>
    </style>

    <style name="progress_bar_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>