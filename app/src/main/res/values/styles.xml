<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="base_container">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <!-- style title -->
    <style name="title">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- styles button -->
    <style name="base_button">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="start_button" parent="base_button">
        <item name="android:text">@string/start_button_text</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="pause_button" parent="base_button">
        <item name="android:text">@string/pause_button_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/pause_button_color</item>
    </style>

    <style name="stop_button" parent="base_button">
        <item name="android:text">@string/stop_button_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/stop_button_color</item>
    </style>

    <!-- Hint appearance -->
    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/hint_Accent</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/hint_Accent</item>
        <item name="colorControlNormal">@color/hint_Accent</item>
        <item name="colorControlActivated">@color/hint_Accent</item>
    </style>

</resources>
