<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- strings -->
    <string name="time_selector_hour_suffix_singular">hour</string>
    <string name="time_selector_hour_suffix_plural">hours</string>
    <string name="time_selector_minute_suffix_singular">minute</string>
    <string name="time_selector_minute_suffix_plural">minutes</string>
    <string name="time_selector_second_suffix_singular">second</string>
    <string name="time_selector_second_suffix_plural">seconds</string>

    <!-- dimension -->
    <dimen name="time_selector_number_picker_middle_horizontal_margin">8dp</dimen>

    <!-- styles -->
    <style name="time_selector_container" parent="linear_layout_horizontal">
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="number_picker">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="number_picker_middle" parent="number_picker">
        <item name="android:layout_marginLeft">@dimen/time_selector_number_picker_middle_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/time_selector_number_picker_middle_horizontal_margin</item>
    </style>

</resources>