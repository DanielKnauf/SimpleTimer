<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="knaufdan.android.simpletimerapp.ui.fragments.TimerFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/progessbarInclude"
            style="@style/timer_fragment_progress_bar"
            layout="@layout/progressbar_layout"
            app:viewModel="@{viewModel}"
            tools:progress="10" />

        <LinearLayout style="@style/timer_fragment_action_button_container">

            <Button
                style="@style/timer_fragment_stop_button"
                android:onClick="@{()->viewModel.onStopClicked()}" />

            <Button
                style="@style/timer_fragment_pause_button"
                android:background="@{viewModel.isPaused ? @color/start_button_color : @color/pause_button_color }"
                android:onClick="@{()->viewModel.onPauseClicked()}"
                android:text="@{viewModel.isPaused ? @string/resume_button_text : @string/pause_button_text}"
                android:textColor="@{viewModel.isPaused ? @android:color/white : @android:color/black}" />
        </LinearLayout>

    </LinearLayout>
</layout>