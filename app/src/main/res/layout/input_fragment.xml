<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="knaufdan.android.simpletimerapp.ui.fragments.InputFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/instruction_tv"
            style="@style/input_fragment_instruction_text_view"
            android:text="@{viewModel.instructionText}"
            app:layout_constraintBottom_toTopOf="@+id/include"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Instruction" />

        <include
            android:id="@+id/include"
            style="@style/input_fragment_time_input_field"
            layout="@layout/timer_input_field"
            app:hintText="@{viewModel.hintText}"
            app:insertNumber="@={viewModel.timePerCycle}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instruction_tv" />

        <LinearLayout
            android:id="@+id/time_unit_container"
            style="@style/input_fragment_time_unit_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include">

            <TextView
                style="@style/input_fragment_time_unit_header"
                android:text="@string/timer_input_time_unit_header" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                style="@style/input_fragment_time_unit_selector"
                app:currentSelection="@{viewModel.currentSelection}"
                app:itemSource="@{viewModel.timeUnitSelectionItems}"
                app:onSelectedTab="@{viewModel::onTabSelected}" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/repeat_container"
            style="@style/input_fragment_repeat_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_unit_container">

            <TextView
                style="@style/input_fragment_repeat_label"
                android:text="@string/timer_input_repeat_switch_text" />

            <Switch
                style="@style/input_fragment_repeat_switch"
                android:checked="@={viewModel.isOnRepeat}" />
        </LinearLayout>

        <Button
            android:id="@+id/start_button"
            style="@style/input_fragment_start_button"
            android:background="@{viewModel.isEnabled ? @color/start_button_color : @color/stop_button_color}"
            android:enabled="@{viewModel.isEnabled}"
            android:onClick="@{() -> viewModel.onStartClicked()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>